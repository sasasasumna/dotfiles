{
  "window.commandCenter": true,
  "editor.cursorStyle": "line-thin",
  "cursor.aipreview.enabled": true,
  "editor.cursorBlinking": "phase",
  "editor.formatOnSave": true,
  "diffEditor.codeLens": true,
  "window.autoDetectColorScheme": true,
  "git.openRepositoryInParentFolders": "always",
  "editor.fontFamily": "Hasklig",
  "files.autoSave": "onFocusChange",
  "editor.tabSize": 2,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120]
  },
  "redhat.telemetry.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [120],
  "editor.minimap.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "prettier.documentSelectors": ["*.rb", "*.js", "*.jsx", "*.ts"],
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "editor.fontLigatures": true,
  "workbench.colorTheme": "Spinel",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "window.zoomLevel": 1,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cursor.cpp.disabledLanguages": ["yaml", "plaintext", "markdown", "csv", "untitled"],
  "accessibility.dimUnfocused.enabled": true,
  "[jsonc]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "ruby.useBundler": true,
  "ruby.format": false,
  "githubPullRequests.pullBranch": "never",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "cursor.cpp.enablePartialAccepts": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontFamily": "Hasklug Nerd Font Mono",
  "terminal.integrated.gpuAcceleration": "on",
  "explorer.confirmDelete": false,
  "makefile.configureOnOpen": true,
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "rubyLsp.addonSettings": {

  },
  "sorbet.enabled": true,
  "sorbet.lspConfigs": [
    {
      "id": "stable",
      "name": "Sorbet",
      "description": "Stable Sorbet Ruby IDE features",
      "command": [
        "bundle",
        "exec",
        "srb",
        "typecheck",
        "--lsp"
      ]
    // },
    // {
    //   "id": "beta",
    //   "name": "Sorbet (Beta)",
    //   "description": "Beta Sorbet Ruby IDE features",
    //   "command": [
    //     "bundle",
    //     "exec",
    //     "srb",
    //     "typecheck",
    //     "--lsp",
    //     "--enable-all-beta-lsp-features"
    //   ]
    // },
    // {
    //   "id": "experimental",
    //   "name": "Sorbet (Experimental)",
    //   "description": "Experimental Sorbet Ruby IDE features (warning: crashy, for developers only)",
    //   "command": [
    //     "bundle",
    //     "exec",
    //     "srb",
    //     "typecheck",
    //     "--lsp",
    //     "--enable-all-experimental-lsp-features"
    //   ]
    }
  ],
  "rdbg.rubyVersionManager": "rbenv",
  "rubyLsp.rubyVersionManager": {
    "identifier": "rbenv"
  }
}
