export DOTFILES_DIR="$HOME/.dotfiles"
export DEVELOPMENT_DIR="$HOME/Development"

# SDK directories
export RBENV_ROOT="$HOME/.rbenv"
export GOPATH="$DEVELOPMENT_DIR/golang"
export GO111MODULE="auto"
export PYENV_ROOT="$HOME/.pyenv"
export NODENV_ROOT="$HOME/.nodenv"

# Development options
export GOJI_ENV="development"
export LANG="en_US.UTF-8"
export RACK_ENV="development"
export RAILS_ENV="$RACK_ENV"
export SERVER_ENV="$RAILS_ENV"
export APP_ENV="$SERVER_ENV"
export TZ="America/New_York"

# System options
export ARCHFLAGS="-arch x86_64"
export EDITOR="nvim"
export VISUAL=$EDITOR
export VIM_CONFIG="$HOME/.vim"
export SSH_KEY_PATH="$HOME/.ssh/id_rsa"
export ZSH="$HOME/.oh-my-zsh"
export GPG_TTY=$(tty)

fpath+=~/.zfunc

if command -v rbenv > /dev/null; then
  eval "$(rbenv init -)"
fi

if command -v pyenv >/dev/null 2>&1; then
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
fi

if command -v nodenv >/dev/null 2>&1; then
  eval "$(nodenv init -)"
fi

if command -v jenv >/dev/null 2>&1; then
  eval "$(jenv init -)"
fi

export PATH="$HOME/.yarn/bin:$HOME/.jenv/bin:$HOME/bin:$HOME/.local/bin:$NODENV_ROOT/shims:$RBENV_ROOT/shims:$GOPATH/bin:$GOROOT/bin:/usr/local/bin:/usr/local/sbin:$HOME/.cargo/bin:$PATH"

source $DOTFILES_DIR/aliases
source $HOME/.secrets

ssh-add -K ~/.ssh/id_rsa 2>&1 > /dev/null

docker-machine start default 2>&1 > /dev/null
eval $(docker-machine env) 2>&1 > /dev/null

ZSH_THEME="clean"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="yyyy-mm-dd"
plugins=(git)

source $ZSH/oh-my-zsh.sh

if command -v device > /dev/null; then
  export DEVICE_UUID="$(device id)"
  export DEVICE_SECRET="$(device secret)"
fi

if command -v sw_vers > /dev/null; then
  source $DOTFILES_DIR/zshrc-mac
else
  source $DOTFILES_DIR/zshrc-linux
fi

test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"

