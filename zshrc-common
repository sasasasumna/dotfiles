export DOTFILES_DIR="$HOME/.dotfiles"
export DEVELOPMENT_DIR="$HOME/Development"

# SDK directories
export RBENV_ROOT="$HOME/.rbenv"
export GOPATH="$DEVELOPMENT_DIR/golang"
export GO111MODULE="on"
export PYENV_ROOT="$HOME/.pyenv"
export NODENV_ROOT="$HOME/.nodenv"

# Development options
export GOJI_ENV="development"
export LANG="en_US.UTF-8"
export RACK_ENV="development"
export RAILS_ENV="$RACK_ENV"
export SERVER_ENV="$RAILS_ENV"
export APP_ENV="$SERVER_ENV"
export TZ="America/Los_Angeles"

# System options
export ARCHFLAGS="-arch x86_64"
export EDITOR="nvim"
export VISUAL=$EDITOR
export VIM_CONFIG="$HOME/.vim"
export SSH_KEY_PATH="$HOME/.ssh/id_rsa"
export ZSH="$HOME/.oh-my-zsh"
export GPG_TTY=$(tty)

fpath+=~/.zfunc

if command -v ${RBENV_ROOT}/bin/rbenv > /dev/null; then
  eval "$($RBENV_ROOT/bin/rbenv init -)"
fi

if command -v ${PYENV_ROOT}/bin/pyenv >/dev/null 2>&1; then
  eval "$($PYENV_ROOT/bin/pyenv init -)"
  eval "$($PYENV_ROOT/bin/pyenv virtualenv-init -)"
fi

if command -v ${NODENV_ROOT}/bin/nodenv >/dev/null 2>&1; then
  eval "$($NODENV_ROOT/bin/nodenv init -)"
fi

if command -v ${JENV_ROOT}/bin/jenv >/dev/null 2>&1; then
  eval "$($JENV_ROOT/bin/jenv init -)"
fi

export PATH="$HOME/.yarn/bin:$JENV_ROOT/bin:$RBENV_ROOT/bin:$PYENV_ROOT/bin:$NODENV_ROOT/bin:$HOME/bin:$HOME/.local/bin:$GOPATH/bin:$GOROOT/bin:/usr/local/bin:/usr/local/sbin:$HOME/.cargo/bin:$PATH"

source $DOTFILES_DIR/aliases
source $HOME/.secrets

eval "$(ssh-agent)"
ssh-add -K ~/.ssh/id_rsa 2>&1 > /dev/null

#docker-machine start default 2>&1 > /dev/null
#eval $(docker-machine env) 2>&1 > /dev/null

ZSH_THEME="clean"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"
HIST_STAMPS="yyyy-mm-dd"
plugins=(git)

source $ZSH/oh-my-zsh.sh

if command -v device > /dev/null; then
  export DEVICE_UUID="$(device id)"
  export DEVICE_SECRET="$(device secret)"
fi

if command -v sw_vers > /dev/null; then
  source $DOTFILES_DIR/zshrc-mac
else
  source $DOTFILES_DIR/zshrc-linux
fi

