# Ruby development aliases
alias be="bundle exec"
alias bep="be puma -C config/puma.rb"
alias beps="ENABLE_RAILS_SSL_IN_DEVELOPMENT=true bep"
alias ber="bin/rails"
alias berg="ber g"
alias berd="ber d"
alias berc="ber c"
alias bek="ber"
alias bekt="bek -T"
alias bekc="ber db:create"
alias bekd="ber db:drop"
alias bekm="ber db:migrate"
alias bekcm="bekc && bekm"
alias bekdc="bekd && bekc"
alias bekdcm="bekdc && bekm"
alias beks="ber db:seed"
alias bekms="bekm && beks"
alias bekcms="bekc && bekms"
alias bekdcms="bekd && bekcms"
alias staging-001-kubectl="kubectl --kubeconfig <(doctl kubernetes cluster kubeconfig show k8s-cluster-staging-001)"
alias production-emedcert="kubectl --kubeconfig <(doctl kubernetes cluster kubeconfig show production-emedcert-cluster) -n emedcert-production"
alias staging-emedcert="staging-001-kubectl -n staging-emedcert"
alias staging-pocket="staging-001-kubectl -n staging-pocket"
alias staging-adak="staging-001-kubectl -n staging-adak"
alias production-002-kubectl="kubectl --kubeconfig <(doctl kubernetes cluster kubeconfig show k8s-cluster-production-002)"
alias production-pocket="production-002-kubectl -n production-pocket"
alias _brewpackages="brew update && brew upgrade && brew cleanup && brew cask cleanup"
alias _pip2packages="pip2 install `echo $(cat ~/.dotfiles/pip-base)`"
alias _pippackages="pip install `echo $(cat ~/.dotfiles/pip-base)`"
alias _gopackages="for i in `cat ~/.dotfiles/go-get-base`\; do\; go get -u $i \; done"
