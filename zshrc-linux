export XDG_DATA_DIRS="/var/lib/flatpak/exports/share:/home/adam/.local/share/flatpak/exports/share:$XDG_DATA_DIRS"
export QT_QPA_PLATFORM=wayland

if lsmod | grep nvidia_drm > /dev/null; then
  export VK_DRIVER_FILES=/usr/share/vulkan/icd.d/nvidia_icd.x86_64.json:/usr/share/vulkan/icd.d/nvidia_icd.i686.json
elif lsmod | grep amdgpu > /dev/null; then
  export VK_DRIVER_FILES=/usr/share/vulkan/icd.d/radeon_icd.x86_64.json:/usr/share/vulkan/icd.d/radeon_icd.i686.json
fi
